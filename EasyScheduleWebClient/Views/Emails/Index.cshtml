
@model EasyScheduleWebClient.Models.ViewModel.EmailViewModel

@{
    ViewBag.Title = "Index";
}

<form class="form-horizontal" action="/Emails/Index" method="post">
    <fieldset>

        <!-- Form Name -->
        <legend>Send Email</legend>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">Reciver Email</label>
            <div class="col-md-4">
                <input id="textinput" name="Email" type="text" placeholder="someone@something.com" class="form-control input-md">

            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">Subject</label>
            <div class="col-md-4">
                <input id="textinput" name="subject" type="text" placeholder="Svinger party hos Mikkels mor" class="form-control input-md">

            </div>
        </div>

        <!-- Textarea -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="textarea">Email Test</label>
            <div class="col-md-4">
                <textarea class="form-control" id="textarea" name="message">Your message here</textarea>
            </div>
        </div>

        <!-- Button (Double) -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="button1id"></label>
            <div class="col-md-8">
                <button id="button1id" name="button1id" class="btn btn-success">Send</button>
                <button id="button2id" name="button2id" class="btn btn-danger">Cancel</button>
            </div>
        </div>

    </fieldset>
</form>

