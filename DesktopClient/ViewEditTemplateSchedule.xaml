<UserControl x:Class="DesktopClient.ViewEditTemplateSchedule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopClient"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <ComboBox Name="ChooseSchedule"  Grid.Row="0" Height="20" Width="150" HorizontalAlignment="Right" Margin="0,83,0.4,0" VerticalAlignment="Top" SelectionChanged="ChooseSchedule_SelectionChanged" ></ComboBox>
        <ComboBox Name="Weeks" Grid.Row="1" Width="50" Height="20" Margin="0,25.6,100.4,104"/>
        <Button x:Name="BtnSaveUpdatedTemplateSchedule" Grid.Row="1" Content="Save" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" RenderTransformOrigin="0.773,1.7" IsEnabled="False" Click="BtnSaveUpdatedTemplateSchedule_Click" />

    </Grid>
</UserControl>
