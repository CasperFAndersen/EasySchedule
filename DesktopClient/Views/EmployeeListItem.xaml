<UserControl x:Class="DesktopClient.Views.EmployeeListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopClient"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Cursor="Hand" ToolTip="Drag Employee Onto Calendar">
        <TextBlock x:Name="empBox" Text="{Binding Name}" TextAlignment="Center" FontSize="18">
            <TextBlock.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF272B34" Offset="0"/>
                    <GradientStop Color="#FF618AEA" Offset="1"/>
                    <GradientStop Color="#FF99B3F0" Offset="0.299"/>
                </LinearGradientBrush>
            </TextBlock.Background>
        </TextBlock>
    </Grid>
</UserControl>
