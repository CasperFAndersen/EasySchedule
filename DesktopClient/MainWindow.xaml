<Window x:Class="DesktopClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopClient"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="MainWindow" Height="768" Width="1366">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Name="MenuRow" Height="20"/>
            <RowDefinition Name="CotrolsRow" Height="6*"/>
            <RowDefinition Name="CalendarRow" Height="10*"/>
            <RowDefinition Name="ButtonRow"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <local:Calendar x:Name="Calendar" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2"/>
        <ListView Name="EmployeeList" Grid.Column="1" Grid.Row="1"></ListView>
        <Button x:Name="BtnSaveTemplateSchedule" Grid.Row="1" Content="Button" HorizontalAlignment="Left" Margin="565,308,0,0" VerticalAlignment="Top" Width="75" Click="BtnSaveTemplateSchedule_Click"/>
        <ComboBox x:Name="CBoxDepartment" Grid.Row="1" ItemsSource="{Binding departmentList}" HorizontalAlignment="Left" Margin="133,158,0,0" VerticalAlignment="Top" Width="130" Height="26" SelectionChanged="CBoxDepartment_SelectionChanged"/>
        <TextBox x:Name="TxtBoxTemplateScheduleName" Grid.Row="1" HorizontalAlignment="Left" Height="22" Margin="133,110,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TxtBoxNoOfWeeks" Grid.Row="1" HorizontalAlignment="Left" Height="23" Margin="46,314,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="60"/>
        <Menu  Grid.Row="0" Grid.ColumnSpan="2">
            <MenuItem Header="Basisplan">
                <MenuItem Header="Opret basisplan"/>
                <MenuItem Header="Se/Rediger basisplan" Click="MenuItem_Click" />
            </MenuItem>
            <MenuItem Header="VagtPlan"/>
        </Menu>
        <StackPanel Name="ButtonPanel" Grid.Column="1" Grid.Row="3">
            
        </StackPanel>
        <StackPanel Name="ControlPanel" Grid.Row="1">
            
        </StackPanel>
    </Grid>
</Window>
