<Window x:Class="DesktopClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopClient"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="MainWindow" Height="768" Width="1366">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <local:Calendar x:Name="Calendar" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"/>
        <ListView Name="EmployeeList" Grid.Column="1"></ListView>
        <Button x:Name="BtnSaveTemplateSchedule" Content="Save" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="BtnSaveTemplateSchedule_Click" RenderTransformOrigin="0.773,1.7"/>
        <ComboBox x:Name="CBoxDepartment" ItemsSource="{Binding departmentList}" HorizontalAlignment="Left" Margin="133,158,0,0" VerticalAlignment="Top" Width="130" Height="26" SelectionChanged="CBoxDepartment_SelectionChanged"/>
        <TextBox x:Name="TxtBoxTemplateScheduleName" HorizontalAlignment="Left" Height="22" Margin="133,110,0,0" TextWrapping="Wrap" Text="Navn..." VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TxtBoxNoOfWeeks" HorizontalAlignment="Left" Height="23" Margin="86,0,0,10" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" Width="82" TextChanged="TxtBoxNoOfWeeks_TextChanged"/>
        <Label Content="Basisplan Navn:" HorizontalAlignment="Left" Margin="36,106,0,0" VerticalAlignment="Top"/>
        <Label Content="Afdeling:" HorizontalAlignment="Left" Margin="36,158,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="Antal af uger:" HorizontalAlignment="Left" Margin="5,0,0,7" VerticalAlignment="Bottom" RenderTransformOrigin="0.494,-0.154"/>
    </Grid>
</Window>
